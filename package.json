{
  "name": "spark",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.2.7",
      "better-auth": "^1.4.10",
      "dotenv": "^17.2.2",
      "drizzle-kit": "^0.31.8",
      "drizzle-orm": "^0.45.1",
      "typescript": "^5",
      "zod": "^4.1.13"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:server": "turbo -F @spark/server dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @spark/db db:push",
    "db:studio": "turbo -F @spark/db db:studio",
    "db:generate": "turbo -F @spark/db db:generate",
    "db:migrate": "turbo -F @spark/db db:migrate",
    "db:start": "turbo -F @spark/db db:start",
    "db:watch": "turbo -F @spark/db db:watch",
    "db:stop": "turbo -F @spark/db db:stop",
    "db:down": "turbo -F @spark/db db:down",
    "check": "oxlint && oxfmt --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@spark/env": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@spark/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
